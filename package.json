{
  "name": "@metaplex-foundation/solana-idl-to-api",
  "version": "0.0.0",
  "description": "Generates SDK API from solana contract IDL.",
  "main": "dist/src/solana-idl-to-api.js",
  "types": "dist/src/solana-idl-to-api.d.ts",
  "scripts": {
    "check:publish-ready": "yarn build",
    "preversion": "yarn check:publish-ready",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "test": "yarn test:anchor:basic0 && yarn test:anchor:basic1 && yarn test:anchor:basic2 && yarn test:anchor:basic3",
    "test:anchor:basic0": "cd ./test/anchor-examples/basic-0 && yarn test",
    "test:anchor:basic1": "cd ./test/anchor-examples/basic-1 && yarn test",
    "test:anchor:basic2": "cd ./test/anchor-examples/basic-2 && yarn test",
    "test:anchor:basic3": "cd ./test/anchor-examples/basic-3 && yarn test",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "doc": "rimraf ./docs && typedoc",
    "doc:update": "./sh/update-docs",
    "doctoc": "doctoc README.md"
  },
  "repository": "git@github.com:metaplex-foundation/solana-idl-to-api.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "private": false,
  "directories": {
    "dist": "./dist/"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "solana",
    "blockchain",
    "IDL",
    "API"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@metaplex-foundation/beet": "^0.0.1",
    "@metaplex-foundation/beet-solana": "^0.0.1",
    "@solana/web3.js": "^1.31.0",
    "camelcase": "^6.2.1",
    "debug": "^4.3.3",
    "js-sha256": "^0.9.0",
    "prettier": "^2.5.1",
    "snake-case": "^3.0.4"
  },
  "devDependencies": {
    "@metaplex-foundation/amman": "^0.0.9",
    "@project-serum/anchor": "^0.19.1-beta.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^16.11.12",
    "@types/prettier": "^2.4.2",
    "@types/tape": "^4.13.2",
    "doctoc": "^2.1.0",
    "rimraf": "^3.0.2",
    "spok": "^1.4.3",
    "tape": "^5.3.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
